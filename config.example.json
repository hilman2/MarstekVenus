{
  "description": "Marstek PV-Akku Steuerung - Beispielkonfiguration",
  "version": "3.1",
  
  "energy_meter": {
    "type": "shelly",
    "comment": "Verf√ºgbare Typen: 'shelly' oder 'ecotracker'"
  },
  
  "shelly": {
    "ip": "192.168.1.100",
    "timeout_seconds": 5,
    "max_failures_before_stop": 2,
    "check_interval_seconds": 3
  },
  
  "ecotracker": {
    "ip": "192.168.1.101",
    "timeout_seconds": 5,
    "max_failures_before_stop": 2,
    "check_interval_seconds": 3
  },
  
  "battery": {
    "ip": "192.168.1.200",
    "port": 502,
    "timeout_seconds": 3,
    "akku_ids": [1, 2],
    "max_power_per_battery": 2500,
    "min_power_per_battery": 50,
    "min_soc_for_discharge": 11,
    "max_soc_for_charge": 98
  },
  
  "control": {
    "poll_interval_seconds": 2,
    "soc_update_interval_seconds": 30,
    "target_grid_power_charge": -20,
    "target_grid_power_discharge": 20,
    "comment": "Negative Werte = Einspeisung ins Netz, Positive Werte = Bezug vom Netz"
  },
  
  "web": {
    "host": "0.0.0.0",
    "port": 8080
  },
  
  "logging": {
    "level": "INFO",
    "file": "logs/marstek.log",
    "max_file_size_mb": 10,
    "backup_count": 3
  }
}
